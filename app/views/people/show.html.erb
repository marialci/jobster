<header class="sixteen colums">
  <h1><%= @person.first_name %> <%= @person.last_name %></h1>
  <h2>Description of a lot of words</h2>
</header>
<div class="about sixteen columns">
  <p>
    <%= @person.description %>
  </p>
</div><!--close about div-->
 <div class="info">
   <div class="contact nine columns">
     <h3>Contact</h3>
     <ul>
       <li> <%= @person.email %> </li>
       <li> <%= @person.phone_number %></li>
     </ul>
   </div><!--contact div-->
   <div class="links seven columns">
     <h3> Links </h3>
     <%= link_to "All People", people_path %>
     <%= link_to "Edit Person", edit_person_path(@person) %>
   </div><!-- close links div-->
</div><!--close info div-->